---
import "../styles/global.css";
import Card from "../components/Card.astro";
import Footer from "../components/Footer.astro";
---

<html class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <title>Lea's card</title>
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <!-- Incluye el CDN de Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />
    <!-- Material Tailwind stylesheet -->
    <link
      rel="stylesheet"
      href="https://unpkg.com/@material-tailwind/html@latest/styles/material-tailwind.css"
    />
  </head>
  <body class="bg-gray-900">
    <div class="fixed top-0 left-0 w-full min-h-full z-[-2] bg-[radial-gradient(ellipse_100%_100%_at_70%_-10%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
	  <Card />
    <Footer />
  </body>
</html>

